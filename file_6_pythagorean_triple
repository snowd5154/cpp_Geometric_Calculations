#include<bits/stdc++.h>
using namespace std;
int main(){
   cout<<"Enter restriction on maximum value :";
   int restriction;
   cin>>restriction;
   int a,b,c;//declaring variables
   a=1;
   while(a<=restriction){
       b=1;
       while(b<=restriction){
           c=1;
           while(c<=restriction){
               if((a*a)+(b*b)==(c*c))
                   cout<<"a :"<<a<<", b :"<<b<<", c :"<<c<<"\n";
               c++;
           }
           b++;
       }
       a++;
   }
   system("pause");
   return 0;
}
